<!DOCTYPE html>
<html>
    <head>
        <!-- Standard Meta -->
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

        <!-- Site Properties -->
        <title>Aluno CBTMS</title>
        <script src="/webfolio/node_modules/semantic-ui/node_modules/jquery/dist/jquery.min.js"></script>

        <link rel="stylesheet" type="text/css" href="/webfolio/semantic/dist/semantic.min.css">
        <script src="/webfolio/semantic/dist/components/form.js"></script>
        <script src="/webfolio/semantic/dist/components/transition.js"></script>
        <script src="/webfolio/semantic/dist/components/dimmer.js"></script>

        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:100i,300i,400">
        <link rel="stylesheet" type="text/css" href="/webfolio/assets/css/alunoCBTMS.css">
    </head>

    <body>
      <div class="ui middle aligned center aligned grid" style="margin: 5px;">
        <div class="column">
          <h2 class="ui teal big image">
              <img src="/webfolio/assets/folio_logo_final.png" class=" image">
          </h2>

          {{ form_start(formAddAluno, {'attr' : {'id' : 'formulario', 'class' : 'ui large form' } }) }}
              <div  id="inputSenha" class="field">
                <div class="ui left icon input">
                    <img id="iconeUsuario" src="/webfolio/assets/pessoa.png"  width="25" height="28">
                    {{form_row(formAddAluno.NmUser, { 'attr' : { 'placeholder' : 'nome', 'class' : 'ui input' }})}}
                </div>
              </div>
              <div  id="inputSenha" class="field">
                <div class="ui left icon input">
                    <img id="iconeUsuario" src="/webfolio/assets/pessoa.png"  width="25" height="28">
                    {{form_row(formAddAluno.DsEmail, { 'attr' : { 'placeholder' : 'e-mail', 'class' : 'ui input' }})}}
                </div>
              </div>

              <div id="inputSenha" class="field">
                  <div class="ui left icon input">
                      <img id="iconeUsuario" src="/webfolio/assets/ExportaçãoTutor-26.png"  width="25" height="25">
                      {{form_row(formAddAluno.NuCellphone, { 'attr' : {'placeholder' : 'telefone', 'class' : 'ui input' }})}}
                  </div>
              </div>
              <input type="submit" class="ui fluid large submit button" value="SALVAR">
          {{ form_end(formAddAluno) }}
        </div>
      </div>
    </body>
</html>
