<script>
    function clearForm(id, ph, nome) {
        var form = document.getElementById(id);
        form.setAttribute("placeholder", "");
        form.onkeydown = function (e) {
            if (e.which === 9) {
                var field = document.getElementsByName(nome);
                if (field[0].value === '') {
                    form.setAttribute("placeholder", ph);
                }
                if (id === "form_DsEmail") {
                    var secForm = document.getElementById("form_DsPassword");
                    secForm.setAttribute("placeholder", "");
                    secForm.onkeydown = function (e) {
                        if (e.which === 9) {
                            var secField = document.getElementsByName("form[DsPassword]");
                            if (secField[0].value === '') {
                                secForm.setAttribute("placeholder", "Senha");
                            }
                        }
                    };
                }
            }
        };
        document.getElementsByTagName("BODY")[0].onclick = function (e) {
            if (e.target !== form) {
                var field = document.getElementsByName(nome);
                if (field[0].value === '') {
                    form.setAttribute("placeholder", ph);
                }
            }
        };
    }
    function esqueceuSenha(){
      var form = document.getElementById("inputSenha");
      form.style.display="none";
      var primeiroAcesso = document.getElementById("primeiroAcesso");
      primeiroAcesso.style.display="none";
      var formSenha = document.getElementById("esqueceuSenha");
      formSenha.style.display="block";
      var botao = document.getElementById("form_save");
      botao.innerHTML = "enviar nova senha";
      var login = document.getElementById("restaurarLogin");
      login.style.display="block";
    }

    function primeiroAcesso(){
      var form = document.getElementById("inputSenha");
      form.style.display="none";
      var formSenha = document.getElementById("esqueceuSenha");
      formSenha.style.display="none";
      var primeiroAcesso = document.getElementById("primeiroAcesso");
      primeiroAcesso.style.display="block";
      var botao = document.getElementById("form_save");
      botao.innerHTML ="enviar senha";
      var login = document.getElementById("restaurarLogin");
      login.style.display="block";
    }

    function restaurarLogin(){
      var form = document.getElementById("inputSenha");
      form.style.display="block";
      var formSenha = document.getElementById("esqueceuSenha");
      formSenha.style.display="none";
      var primeiroAcesso = document.getElementById("primeiroAcesso");
      primeiroAcesso.style.display="none";

      var botao = document.getElementById("form_save");
      botao.innerHTML ="entrar";
      var login = document.getElementById("restaurarLogin");
      login.style.display="none";
    }
</script>
